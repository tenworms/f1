<%= form_with url: "/teams/#{@team.id}", method: :patch, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>
  <%= form.label :currently_leading %>
  <%= form.select :currently_leading, options_for_select([true, false]) %>
  <%= form.label :championships_won  %>
  <%= form.number_field :championships_won %>
  <%= form.submit 'Update Team' %>
<% end %>
